<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/Content/themes/base/jquery.ui.all.css")" rel="stylesheet" type="text/css" />
        <script src="@Url.Content("~/Scripts/jquery-1.6.2.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/modernizr-2.0.6-development-only.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/AjaxLogin.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/datetimepicker.js")" type="text/javascript"></script>
        <script type="text/javascript">
        	$(document).ready(function () {
        	    $(".datepicker").datetimepicker({ changeYear: true, changeMonth: true, yearRange: "-80:+20", timeFormat: 'hh:mm' });
        	});
		</script>
        <script type="text/javascript">
            $(function () {
                $("#open-dialog")
			    .click(function () {
			        $("#dialog").dialog("open");
			    });
            });
        </script>
    <script type="text/javascript">
    $(function () {
        $("#dialog").dialog({
            autoOpen: false,
            height: 300,
            width: 350,
            modal: true
        })});
        </script>
        <meta name="viewport" content="width=device-width">
    </head>
    <body>
        <header>
            <div id="title">
                 @Html.ActionLink("Web Calendar", "Index", "Meeting")
            </div>
            <div id="login">
                 @Html.Partial("_LogOnPartial")
            </div>
        </header>
        <section id="outer">
            <section id="navbar">
                    <nav>
                        <ul id="menu">
                            <li title="Meeting">@Html.ActionLink("Meetings", "AllMeetings", "Meeting")</li>
                            <li title="Contact">@Html.ActionLink("Contacts", "Index", "Contact")</li>
                            <li title="Category">@Html.ActionLink("Category", "Index", "Category")</li>
                        </ul>
                    </nav>
            </section>
        </section>
        <section id="main">
        <section id="content">
            @RenderSection("featured", false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
            </section>
        </section>
        	<footer>
				<ul>
					<li><a href="#">About</a></li>
					<li><a href="#">Help</a></li>
					<li><a href="#">Terms &amp; Conditions</a></li>
					<li><a href="#">Privacy</a></li>
					<li><a href="#">Contact Us</a></li>
					<li><a href="#">Sitemap</a></li>
				</ul>
			</footer>
    </body>
</html>

@if (!string.IsNullOrEmpty(ViewBag.CurrentPage)) {        
    <script type="text/javascript">
        $(function () {
            $("li[title=@ViewBag.CurrentPage]").addClass("active-menu");
        });         
    </script>
}
