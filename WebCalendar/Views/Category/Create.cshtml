@model WebCalendar.Models.CategoryViewModel

@{
    ViewBag.Title = "Create";
    ViewBag.CurrentPage = "Category";
}

<h2>Create</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
